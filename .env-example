# LuminaWeb Environment Variables
# Copy this file to .env and fill in your actual values

# Development
VITE_APP_URL=http://localhost:5173

# Production API URL (set this in production)
# VITE_API_URL=https://your-domain.com

# External Services
# Used for generating screenshots of websites
SCREENSHOT_API_KEY=your_screenshot_api_key_here

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Groq AI Configuration  
VITE_GROQ_API_KEY=your_groq_api_key_here

# ScrapingBee Configuration (for web scraping)
VITE_SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here

# UploadThing Configuration (for file uploads)
UPLOADTHING_APP_ID=your_uploadthing_app_id_here
UPLOADTHING_SECRET=your_uploadthing_secret_here
VITE_UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# Security Configuration
# Generate a secure 32-character random string for file encryption
FILE_ENCRYPTION_KEY=your_32_character_encryption_key_here

# File Storage Configuration
MAX_FILE_SIZE_MB=10
FILE_RETENTION_MINUTES=30 